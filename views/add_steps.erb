<div class="row">
  <div class="col">
    <% if @steps.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @steps.each do |step| %>
                <tr class="table-light">
                  <td class="align-middle"><%= step.instruction %></td>
                </td>

                  <td style="text-align: center;">
                    <a href="/step/<%= step.id %>">
                      <button class="btn btn-warning " type="button">Edit step</button>
                    </a>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="card bg-light">
      <div class="card-body">
        <h1>Add steps for <%=@recipe.recipe_name%></h1>

        <form action="/add_steps/<%=@recipe.id%>" method="post">
          <div class="form-group">
            <label for="instruction">Instruction: </label>
            <input id="instruction" name="instruction" class="form-control" type="text">
          </div>
          <button type="submit" class="btn btn-warning">Add step</button>
        </form>
        <br>
        <a href="/add_tags/<%=@recipe.id%>"><button type="submit" class="btn btn-info">Add tags and rating</button></a>
      </div>
    </div>
  </div>
</div>
