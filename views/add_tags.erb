<div class="row">
  <div class="col">
    <% if @tags.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <h2>Recipe: <%=@recipe.recipe_name%></h2>
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @tags.each do |tag| %>
                <tr class="table-light">
                  <td class="align-middle"><%= tag.catagory %></td>
                </td>

                  <td style="text-align: center;">
                    <a href="/tag/<%= tag.id %>">
                      <button class="btn btn-warning btn-block" type="button">Edit tag</button>
                    </a>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="card bg-light">
      <div class="card-body">
        <h3>Add tags for <%=@recipe.recipe_name%></h3>

        <form action="/add_tags/<%=@recipe.id%>" method="post">
          <div class="form-group">
            <label for="catagory">Tag: </label>
            <input id="catagory" name="catagory" class="form-control" type="text">
          </div>
          <button type="submit" class="btn btn-warning">Add tag</button>
        </form>
        <a href="/"><button type="submit" class="btn btn-info">Home</button></a>
      </div>
    </div>
  </div>
</div>
