<br>
<div class="row">
  <div class="col">
    <% if @recipes.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Recipe</th>
                <th>View</th>
                <th>Rating</th>
              </tr>
            </thead>
            <tbody>
              <% @recipes.each do |recipe| %>
                <tr class="table-light">
                  <td class="align-middle"><%= recipe.recipe_name %></td>
                  <td style="text-align: center;">
                    <a href="/recipe/<%= recipe.id %>">
                      <button class="btn btn-warning" type="button">View Recipe</button>
                    </a>
                  </td>
                  <td style="text-align: center;">
                    <% if recipe.rating %>
                      <% for i in 1..recipe.rating %>
                          <span>‚≠ê</span>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
    <br>
    <% if @tags.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <h3>Categories</h3>
          <% @tags.each do |tag| %>
            <p><a href="/tag/<%= tag %>">
              <%= tag %>
            </a></p>
          <% end %>
        </div>
      </div>
    <% end %>
    <br>
    <a href="/create_recipe"><button class="btn btn-dark" type="button">Create New Recipe</button></a>
  </div>
</div>
